# ~/.bash_aliases

# Maintainance
alias edital="nvim ~/.bash_aliases && source .bashrc"
alias editpr="nvim ~/.bash_prompt"
alias editcon="nvim ~/.config/hypr/hyprland.conf"
alias up="sudo pacman -Syu"

# Fix my mistakes
alias edit="nvim"

# Listing Commands
alias ls="ls --color=auto"
alias lu="ls -laGhF --group-directories-first --color=auto --time=ctime"
alias la="ls -A"
alias ll="ls -l"
alias l="ls -CF"

# Quick Directory Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias .2="cd .."
alias .3="cd ../.."
alias .4="cd ../../.."
alias .5="cd ../../../..'"
alias .6="cd ../../../../.."
alias .7="cd ../../../../../.."
alias .8="cd ../../../../../../.."
alias .9="cd ../../../../../../../.."
alias .10="cd ../../../../../../../../.."

# Just for Fun
alias please="sudo"
alias dog="cat"
